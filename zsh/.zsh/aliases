# Alias
# ---
#
alias k="kubectl"
alias h="helm"

# mac OS shortcuts
alias code="/usr/share/code/code"

# ALIAS COMMANDS
alias ll="ls -la"
alias grep='grep --color'

# Kubernetes alias
alias kgp="kubectl get pods"
alias kgpa="kubectl get --all"

# .dotenv aliases
alias recfg="chmod +x ~/.dotfiles/init.sh && source ~/.zshrc"

# motif aliases
alias vpn="openvpn3 session-start --config /home/james/.openvpn/james_desktop.ovpn"

# aws sso mfa
alias mfa="aws sso login"
